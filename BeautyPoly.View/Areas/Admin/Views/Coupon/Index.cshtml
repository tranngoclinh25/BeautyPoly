@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Quản lý mã giảm giá - Coupon</h1>
<div class="card-body p-1">

    <div class="col-12">
        <div class="font-weight-bold row m-0">
            <div class="col-12 col-md-3 col-lg-3 p-1">
                <div class="form-group m-0">
                    <label>Từ khóa</label>
                    <div class="input-group mb-3">
                        <input type="text" class="form-control form-control-sm" id="coupon_keyword" placeholder="Từ khóa ..." />
                        <div class="input-group-append">
                            <button class="btn btn-success btn-sm" onclick="return GetAll();">
                                <i class="bx bx-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="table-responsive">
    <table class="table table-striped table-hover table-bordered w-100" id="table_coupon">
        <thead>
            <tr class="table-info">
                <th style="width:10%">
                    <button class="btn btn-primary btn-sm" id="btn_add_coupon" onclick="addCoupon()">
                        <i class="bx bx-plus"></i>
                    </button>
                </th>
                <th>Tên chương trình</th>
                <th>Mã</th>
                <th>Số lượng</th>
                <th>Ngày áp dụng</th>
                <th>Ngày kết thúc</th>
                <th>Giá trị giảm</th>
                <th>Thời gian còn lại</th>
            </tr>
        </thead>
        <tbody id="tbody_coupon">
            <tr>
            </tr>
        </tbody>
    </table>
</div>
<div id="modal_coupon" class="modal fade" tabindex="-1">
    <div class="modal-dialog modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Thông tin Coupon</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <input type="number" value="0" id="coupon_id_coupon" hidden />
            <div class="modal-body">
                <div class="row">
                    <div class="col-12">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="coupon_name_coupon" placeholder="Tên chương trình Coupon">
                            <label for="coupon_name_coupon">Tên chương trình Coupon<span class="text-danger">(*)</span></label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="coupon_code_coupon" placeholder="Mã Coupon" disabled>
                            <label for="coupon_code_coupon">Mã Coupon<span class="text-danger">(*)</span></label>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-floating mb-3">
                            <input type="number" class="form-control" id="coupon_quantity_coupon" placeholder="Số lượng mã Coupon">
                            <label for="coupon_quantity_coupon">Số lượng mã Coupon<span class="text-danger">(*)</span></label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="form-floating mb-3">
                            <input type="datetime-local" class="form-control" id="coupon_start_date_coupon" placeholder="Ngày áp dụng">
                            <label for="coupon_start_date_coupon">Ngày áp dụng<span class="text-danger">(*)</span></label>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-floating mb-3">
                            <input type="datetime-local" class="form-control datetimepicker" id="coupon_end_date_coupon" placeholder="Ngày kết thúc">
                            <label for="coupon_end_date_coupon">Ngày kết thúc<span class="text-danger">(*)</span></label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <div class="form-floating mb-3">
                            <select class="form-select" id="coupon_type_coupon" aria-label="Floating label select example">
                                <option value="0">Giảm theo phần trăm</option>
                                <option value="1">Giảm trực tiếp</option>
                            </select>
                            <label for="coupon_type_coupon">Kiểu giảm giá<span class="text-danger">(*)</span></label>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-floating mb-3">
                            <input type="number" class="form-control" id="coupon_discount_value_coupon" placeholder="Giá trị giảm">
                            <label for="coupon_discount_value_coupon">Giá trị giảm<span class="text-danger">(*)</span></label>
                        </div>
                        <div id="discountValueError" style="color: red; display: none;"></div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btn_save_coupon" onclick="createUpdate()">Lưu</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/coupon.js" asp-append-version="true"></script>
}
