@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Danh sách chức vụ</h1>
<div class="card-body p-1">

    <div class="col-12">
        <div class="font-weight-bold row m-0">
            <div class="col-12 col-md-3 col-lg-3 p-1">
                <div class="form-group m-0">
                    <label>Từ khóa</label>
                    <div class="input-group mb-3">
                        <input type="text" class="form-control form-control-sm" id="role_keyword" placeholder="Từ khóa ..." />
                        <div class="input-group-append">
                            <button class="btn btn-success btn-sm" onclick="return GetAll();">
                                <i class="bx bx-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="table-responsive">
    <table class="table table-striped table-hover table-bordered w-100" id="table_role">
        <thead>
            <tr>
                <th style="width:10%" class="text-center">
                    <button class="btn btn-primary btn-sm" id="btn_add_role" onclick="add()">
                        <i class="bx bx-plus"></i>
                    </button>
                </th>
                <th class="text-center">Mã</th>
                <th class="text-center">Chức vụ</th>
                <th class="text-center">Mô tả</th>
                <th class="text-center">Tắt hoạt động</th>
            </tr>
        </thead>
        <tbody id="tbody_role">
            <tr>
            </tr>
        </tbody>
    </table>
</div>
<div id="modal_role" class="modal fade" tabindex="-1">
    <div class="modal-dialog modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Thêm thuộc tính</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <input type="number" value="0" id="roleid_role" hidden />
            <div class="modal-body">
                <div class="row">
                    <div class="col-12">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="role_code_role" placeholder="Mã chức vụ">
                            <label for="role_code_role">Mã chức vụ</label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="role_name_role" placeholder="Chức vụ">
                            <label for="role_name_role">Chức vụ</label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="role_description_role" placeholder="Mô tả">
                            <label for="role_name_role">Mô tả</label>
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-12">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="isdelete_role" checked="">
                            <label class="form-check-label" for="isdelete_role">
                                Tắt hoạt động
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btn_save_role" onclick="create()">Lưu</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/role.js" asp-append-version="true"></script>
}


